
<h2 class="text-white mb-4">➕ 新增商品</h2>


<form method="post" action="/Home/CreateShop">
    <div class="form-group row mb-3">
        <label for="inputProductName" class="col-sm-2 col-form-label text-white">商品名稱</label>
        <div class="col-sm-10">
            <input type="text" id="inputProductName" name="product_name" class="form-control" required />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="inputPrice" class="col-sm-2 col-form-label text-white">商品價格</label>
        <div class="col-sm-10">
            <input type="number" id="inputPrice" name="price" class="form-control" min="0" step="1" required />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="inputCategory" class="col-sm-2 col-form-label text-white">商品種類</label>
        <div class="col-sm-10">
            <input type="text" id="inputCategory" name="category" class="form-control" required />
        </div>
    </div>

    <div class="text-center">
        <input class="btn btn-success btn-lg btn-custom mt-3" type="submit" value="新增" />
    </div>
</form>
