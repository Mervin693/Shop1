@model MidtermExam.Models.Shop

<div class="container my-5">
    <div class="card glass-card text-white">
        <div class="card-body">
            <h2 class="card-title mb-4">✏️ 修改商品資訊</h2>

            <form method="post" action="/Home/EditShop">
                <div class="form-group mb-3">
                    <label for="inputShopID">🆔 商品編號</label>
                    <input type="text" id="inputShopID" name="ID" class="form-control" value="@Model.ID" readonly />
                </div>

                <div class="form-group mb-3">
                    <label for="inputProductName">📦 商品名稱</label>
                    <input type="text" id="inputProductName" name="product_name" class="form-control" value="@Model.product_name" />
                </div>

                <div class="form-group mb-3">
                    <label for="inputPrice">💰 商品價格</label>
                    <input type="text" id="inputPrice" name="price" class="form-control" value="@Model.price" />
                </div>

                <div class="form-group mb-4">
                    <label for="inputCategory">📂 商品種類</label>
                    <input type="text" id="inputCategory" name="category" class="form-control" value="@Model.category" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="ShopList" class="btn btn-secondary btn-custom">返回</a>
                    <input class="btn btn-success btn-custom" type="submit" value="儲存修改" />
                </div>
            </form>
        </div>
    </div>
</div>
