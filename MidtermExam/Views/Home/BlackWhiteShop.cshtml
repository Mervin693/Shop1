@{
    Layout = null;
    ViewData["Title"] = "黑白風格商品展示";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 60px 20px;
        }

        .page-title {
            text-align: center;
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 60px;
            padding-bottom: 10px;
            border-bottom: 3px solid white;
            display: inline-block;
        }

        .product-card {
            background-color: #fff;
            color: #000;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .product-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
            }

        .product-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-bottom: 1px solid #000;
        }

        .product-body {
            padding: 1.2rem;
        }

        .product-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .product-price {
            font-size: 1rem;
            color: #333;
            margin-bottom: 1rem;
        }

        .btn-blackwhite {
            background-color: #000;
            color: #fff;
            border: 2px solid #fff;
            padding: 0.5rem 1.2rem;
            transition: all 0.3s ease;
            border-radius: 30px;
        }

            .btn-blackwhite:hover {
                background-color: #fff;
                color: #000;
                border: 2px solid #000;
            }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="page-title">黑白風格商品展示</h1>

        <div class="row g-4 mt-4">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-md-4">
                    <div class="product-card">
						<img src="~/images/頂級珠寶.jpg" alt="商品圖片" class="product-img" />
                        <div class="product-body">
                            <div class="product-title">商品名稱 @i</div>
                            <div class="product-price">價格：NT$ @((i * 100) + 99)</div>
                            <button class="btn btn-blackwhite">加入購物車</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>