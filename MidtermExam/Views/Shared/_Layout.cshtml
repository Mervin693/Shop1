<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MidtermExam</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MidtermExam.styles.css" asp-append-version="true" />
</head>
<body>

    <header>

        <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-dark glass-navbar">

            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
					<img src="~/images/chatgpt image 2025年5月27日 下午02_36_21.png"alt="Logo" style="height: 40px;" class="me-2" />
                    
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">首頁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ShopList", "Home")">商品管理</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">關於我們</a>
                        </li>
                    </ul>

                    <!-- 整合搜尋功能 -->
                    <form asp-controller="Home" asp-action="ShopList" method="get" class="d-flex search-box" role="search">
                        <input class="form-control me-2" type="search" name="searchString" placeholder="搜尋商品" value="@ViewBag.SearchString">
                        <button class="btn btn-outline-light" type="submit">搜尋</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MidtermExam - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        let prevScrollPos = window.pageYOffset;
        const navbar = document.getElementById("mainNavbar");

        window.onscroll = function () {
            let currentScrollPos = window.pageYOffset;

            if (prevScrollPos > currentScrollPos) {
                // 上滑，顯示 navbar
                navbar.style.top = "0";
            } else {
                // 下滑，隱藏 navbar
                navbar.style.top = "-100px"; // 根據你的 navbar 高度調整
            }

            prevScrollPos = currentScrollPos;
        };
    </script>

</body>
</html>
